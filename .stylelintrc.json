{
    "cache": true,
    "defaultSeverity": "warning",
    "extends": [
        "stylelint-config-standard"
    ],
    "fix": true,
    "rules": {
        "selector-class-pattern": null,
        "unit-disallowed-list": [
            "dpi",
            "em"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.scss",
                "**/*.scss"
            ],
            "extends": [
                "stylelint-config-standard-scss"
            ],
            "rules": {}
        }
    ]
}
