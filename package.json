{
    "name": "@chrisjohnsoct/core-css",
    "version": "1.0.0",
    "description": "Core CSS library for my personal projects",
    "author": "Chris Johnson",
    "license": "MIT",
    "type": "module",
    "repository": "https://github.com/Johnsoct/core-css.git",
    "publishConfig": {
        "access": "public",
        "@chrisjohnsoct:registry": "https://registry.npmjs.org"
    },
    "exports": {
        ".": "./dist/lib/core-css.css"
    },
    "files": [
        "dist/lib"
    ],
    "keywords": [
        "css",
        "css3",
        "sass",
        "scss",
        "libary",
        "framework"
    ],
    "scripts": {
        "build:lib": "sass --style=expanded --no-source-map lib/main.scss dist/lib/index.css",
        "build:site": "vite build --config vite.config.site.ts",
        "dev:lib": "sass --style=expanded --source-map lib/main.scss src/index.css",
        "dev:site": "npm run build:lib && npm run minify:lib && vite --config --config vite.config.site.ts",
        "minify:lib": "postcss dist/lib/index.css --no-map --use cssnano --output dist/lib/index.min.css"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@html-eslint/eslint-plugin": "^0.35.0",
        "@html-eslint/parser": "^0.35.0",
        "@types/node": "^22.10.5",
        "cssnano": "^7.0.6",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "postcss-cli": "^11.0.0",
        "sass-embedded": "^1.83.4",
        "stylelint": "^16.12.0",
        "stylelint-config-standard": "^36.0.1",
        "typescript-eslint": "^8.19.0",
        "vite": "^6.0.7"
    }
}
