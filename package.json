{
    "name": "@chrisjohnsoct/core-css",
    "version": "1.0.0",
    "description": "Core CSS library for my personal projects",
    "author": "Chris Johnson",
    "license": "MIT",
    "type": "module",
    "repository": "https://github.com/Johnsoct/core-css.git",
    "publishConfig": {
        "access": "public",
        "@registry:chrisjohnsoct": "https://registry.npmjs.org"
    },
    "exports": {
        ".": "./dist/lib/core-css.css"
    },
    "files": [
        "dist/lib"
    ],
    "keywords": [
        "css",
        "css3",
        "sass",
        "scss",
        "libary",
        "framework"
    ],
    "scripts": {
        "lib:build": "npm run lib:compile && npm run lib:minify",
        "lib:compile": "sass --style=expanded --source-map lib/index.scss:lib/index.css",
        "lib:minify": "postcss lib/index.css --no-map --use cssnano --output dist/lib/index.min.css",
        "lib:minify-on-change": "chokidar 'lib/index.css' -c 'npm run lib:minify'",
        "lib:watch": "sass --style=expanded --source-map --watch lib/index.scss:lib/index.css",
        "site:build": "vite build --config vite.config.site.ts",
        "site:dev": "npm-run-all --parallel lib:watch lib:minify-on-change vite:dev",
        "site:preview": "npm run lib:build && npm run vite:preview",
        "vite:dev": "vite --config vite.config.site.ts",
        "vite:preview": "vite preview --config vite.config.site.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@html-eslint/eslint-plugin": "^0.35.0",
        "@html-eslint/parser": "^0.35.0",
        "@types/node": "^22.10.5",
        "cssnano": "^7.0.6",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "npm-run-all2": "^7.0.2",
        "postcss-cli": "^11.0.0",
        "sass-embedded": "^1.83.4",
        "stylelint": "^16.12.0",
        "stylelint-config-standard": "^36.0.1",
        "typescript-eslint": "^8.19.0",
        "vite": "^6.0.7"
    },
    "dependencies": {
        "chokidar-cli": "^3.0.0"
    }
}
